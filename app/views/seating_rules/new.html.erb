<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="text-xl font-semibold text-gray-900">Create Seating Rule</h1>
          <p class="mt-2 text-sm text-gray-700">
            Describe your seating preferences in natural language, and we'll convert them into structured rules.
          </p>
        </div>
        <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
          <%= link_to "Back to Rules", seating_event_seating_rules_path(@seating_event), 
                      class: "inline-flex items-center justify-center rounded-md border border-transparent bg-gray-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-gray-700" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Natural Language Input Form -->
  <div class="mt-6 bg-white shadow-sm rounded-lg" 
       data-controller="rule-parser"
       data-rule-parser-preview-url-value="<%= preview_seating_event_seating_rules_path(@seating_event) %>">
    <div class="px-4 py-5 sm:p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Natural Language Instructions</h2>
      
      <%= form_with url: seating_event_seating_rules_path(@seating_event), method: :post, 
                    local: true, data: { turbo: false }, class: "space-y-6" do |form| %>
        
        <!-- Main instruction input -->
        <div>
          <label for="natural_language_input" class="block text-sm font-medium text-gray-700">
            Describe your seating preferences
          </label>
          <div class="mt-1">
            <textarea name="natural_language_input" 
                      id="natural_language_input"
                      rows="4" 
                      class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                      placeholder="Example: Keep all FBI agents at different tables..."
                      data-rule-parser-target="input"
                      data-action="input->rule-parser#previewParsing"></textarea>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Describe how you want students seated. Be specific about groups, organizations, or attributes.
          </p>
        </div>

        <!-- Real-time preview -->
        <div data-rule-parser-target="preview" class="hidden">
          <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
            <h3 class="text-sm font-medium text-blue-900 mb-2">AI Interpretation Preview</h3>
            <div data-rule-parser-target="previewContent" class="text-sm text-blue-700"></div>
          </div>
        </div>

        <!-- Action buttons -->
        <div class="flex justify-between items-center pt-4 border-t border-gray-200">
          <button type="button" 
                  data-action="click->rule-parser#previewParsing"
                  class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Preview Parsing
          </button>
          
          <button type="submit" 
                  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Create Rule(s)
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Quick Templates -->
  <div class="mt-6 bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Templates</h2>
      <p class="text-sm text-gray-600 mb-4">Click any template to use it as a starting point:</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @sample_instructions.each do |instruction| %>
          <button type="button" 
                  data-instruction="<%= instruction %>"
                  data-action="click->rule-parser#useTemplate"
                  class="text-left p-3 border border-gray-200 rounded-md hover:border-indigo-300 hover:bg-indigo-50 transition-colors">
            <div class="text-sm font-medium text-gray-900"><%= instruction %></div>
          </button>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Common Patterns -->
  <div class="mt-6 bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Pattern Examples</h2>
      <div class="space-y-4">
        <% @common_patterns.each do |pattern| %>
          <div class="border-l-4 border-indigo-400 pl-4">
            <div class="text-sm font-medium text-gray-900">
              <%= pattern[:rule_type].humanize %> Rule:
            </div>
            <div class="text-sm text-gray-600 mt-1">
              <strong>Pattern:</strong> <%= pattern[:pattern] %>
            </div>
            <div class="text-sm text-gray-500 mt-1">
              <strong>Example:</strong> <%= pattern[:example] %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Batch Processing -->
  <div class="mt-6 bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Batch Processing</h2>
      <p class="text-sm text-gray-600 mb-4">Enter multiple instructions (one per line) to process them all at once:</p>
      
      <%= form_with url: batch_parse_seating_event_seating_rules_path(@seating_event), 
                    method: :post, local: true, class: "space-y-4" do |form| %>
        
        <div>
          <textarea name="instructions[]" 
                    rows="6" 
                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                    placeholder="Keep FBI agents at different tables&#10;Group California agencies together&#10;Spread military personnel evenly"></textarea>
        </div>
        
        <div class="flex justify-end">
          <button type="submit" 
                  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700">
            Process All Instructions
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

