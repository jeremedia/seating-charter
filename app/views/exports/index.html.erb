<% content_for :title, "Export Center" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Export Center</h1>
      <p class="mt-2 text-sm text-gray-700">
        Export seating arrangements in various formats for printing, sharing, and analysis.
      </p>
      <nav class="mt-2" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
          <li><%= link_to @cohort.name, cohort_path(@cohort), class: "hover:text-gray-700" %></li>
          <li>›</li>
          <li><%= link_to @seating_event.name, cohort_seating_event_path(@cohort, @seating_event), class: "hover:text-gray-700" %></li>
          <li>›</li>
          <li class="text-gray-900">Exports</li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Quick Export</h3>
      <p class="mt-1 text-sm text-gray-500">Export the latest seating arrangement</p>
    </div>
    
    <% if @seating_arrangements.any? %>
      <div class="px-4 py-5 sm:px-6">
        <% latest_arrangement = @seating_arrangements.first %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
          <div class="flex items-center justify-between">
            <div>
              <h4 class="font-medium text-blue-900">
                <%= latest_arrangement.multi_day? ? latest_arrangement.day_name : "Latest Arrangement" %>
              </h4>
              <p class="text-sm text-blue-700">
                Created <%= time_ago_in_words(latest_arrangement.created_at) %> ago •
                <%= latest_arrangement.students_count %> students •
                <%= latest_arrangement.tables_count %> tables •
                Score: <%= latest_arrangement.formatted_score %>
              </p>
            </div>
            <div class="flex space-x-2">
              <% @supported_formats.each do |format| %>
                <%= link_to format.humanize, 
                    new_cohort_seating_event_seating_arrangement_export_path(@cohort, @seating_event, latest_arrangement, format: format),
                    class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-full shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="px-4 py-5 sm:px-6">
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v20c0 4.418 7.163 8 16 8 1.381 0 2.721-.087 4-.252M8 14c0 4.418 7.163 8 16 8s16-3.582 16-8M8 14c0-4.418 7.163-8 16-8s16 3.582 16 8m0 0v14m-16-4c0 4.418 7.163 8 16 8 1.381 0 2.721-.087 4-.252" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No arrangements available</h3>
          <p class="mt-1 text-sm text-gray-500">Create a seating arrangement first to export it.</p>
          <div class="mt-6">
            <%= link_to "Create Seating Arrangement", 
                new_cohort_seating_event_seating_optimization_path(@cohort, @seating_event),
                class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @seating_arrangements.any? %>
    <!-- All Arrangements -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-gray-900">All Arrangements</h3>
            <p class="mt-1 text-sm text-gray-500">Select and export multiple arrangements</p>
          </div>
          <div class="flex space-x-2">
            <button type="button" 
                    onclick="selectAllArrangements()" 
                    class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
              Select All
            </button>
            <button type="button" 
                    onclick="clearAllArrangements()" 
                    class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
              Clear All
            </button>
          </div>
        </div>
      </div>

      <div class="px-4 py-5 sm:px-6">
        <%= form_with url: bulk_export_cohort_seating_event_exports_path(@cohort, @seating_event), 
                      method: :post, 
                      local: true, 
                      id: "bulk-export-form" do |form| %>
          
          <!-- Bulk Export Options -->
          <div class="mb-6 p-4 bg-gray-50 rounded-lg" id="bulk-options" style="display: none;">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <%= form.label :format, "Export Format", class: "block text-sm font-medium text-gray-700" %>
                <%= form.select :format, 
                    options_for_select(@supported_formats.map { |f| [f.humanize, f] }),
                    { prompt: "Select format..." },
                    { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
              </div>
              <div>
                <%= form.label :layout, "Layout", class: "block text-sm font-medium text-gray-700" %>
                <%= form.select :layout,
                    options_for_select([
                      ["Standard", "standard"],
                      ["Detailed", "detailed"],
                      ["Compact", "compact"]
                    ]),
                    { selected: "standard" },
                    { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
              </div>
              <div class="flex items-end">
                <%= form.submit "Bulk Export Selected", 
                    class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
                    id: "bulk-export-button" %>
              </div>
            </div>
          </div>

          <!-- Arrangements List -->
          <div class="space-y-4">
            <% @seating_arrangements.each do |arrangement| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <input type="checkbox" 
                           name="arrangement_ids[]" 
                           value="<%= arrangement.id %>"
                           class="mt-1 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 arrangement-checkbox"
                           onchange="updateBulkOptions()">
                  </div>
                  
                  <div class="ml-3 flex-1">
                    <div class="flex items-center justify-between">
                      <div>
                        <h4 class="text-sm font-medium text-gray-900">
                          <%= arrangement.multi_day? ? arrangement.day_name : "Seating Arrangement" %>
                          <% if arrangement.multi_day? %>
                            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                              Day <%= arrangement.day_number %>
                            </span>
                          <% end %>
                        </h4>
                        <div class="mt-1 text-sm text-gray-500 space-x-4">
                          <span>Created <%= time_ago_in_words(arrangement.created_at) %> ago</span>
                          <span><%= arrangement.students_count %> students</span>
                          <span><%= arrangement.tables_count %> tables</span>
                          <span class="font-medium">Score: <%= arrangement.formatted_score %></span>
                          <% if arrangement.has_explanations? %>
                            <span class="inline-flex items-center text-green-600">
                              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                              </svg>
                              Explanations
                            </span>
                          <% end %>
                        </div>
                      </div>
                      
                      <div class="flex space-x-1">
                        <% @supported_formats.each do |format| %>
                          <%= link_to new_cohort_seating_event_seating_arrangement_export_path(@cohort, @seating_event, arrangement, format: format),
                              class: "inline-flex items-center px-2 py-1 text-xs font-medium rounded border border-gray-300 text-gray-700 bg-white hover:bg-gray-50",
                              title: "Export as #{format.humanize}" do %>
                            <%= format_icon(format) %>
                            <%= format.upcase %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Export Formats Guide -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Export Formats Guide</h3>
      </div>
      <div class="px-4 py-5 sm:px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @supported_formats.each do |format| %>
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex items-center">
                <%= format_icon(format) %>
                <h4 class="ml-2 font-medium text-gray-900"><%= format.humanize %></h4>
              </div>
              <p class="mt-2 text-sm text-gray-600"><%= format_description(format) %></p>
              <div class="mt-3">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                  <%= format_features(format) %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
function updateBulkOptions() {
  const checkboxes = document.querySelectorAll('.arrangement-checkbox');
  const selected = Array.from(checkboxes).filter(cb => cb.checked);
  const bulkOptions = document.getElementById('bulk-options');
  
  if (selected.length > 0) {
    bulkOptions.style.display = 'block';
  } else {
    bulkOptions.style.display = 'none';
  }
}

function selectAllArrangements() {
  const checkboxes = document.querySelectorAll('.arrangement-checkbox');
  checkboxes.forEach(cb => cb.checked = true);
  updateBulkOptions();
}

function clearAllArrangements() {
  const checkboxes = document.querySelectorAll('.arrangement-checkbox');
  checkboxes.forEach(cb => cb.checked = false);
  updateBulkOptions();
}
</script>