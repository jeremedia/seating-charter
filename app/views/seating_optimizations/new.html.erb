<div class="container mx-auto px-4 py-6">
  <div class="mb-6">
    <nav class="flex items-center space-x-2 text-sm text-gray-600 mb-4">
      <%= link_to "Dashboard", root_path, class: "hover:text-blue-600" %>
      <span>/</span>
      <%= link_to @seating_event.cohort.name, cohort_path(@seating_event.cohort), class: "hover:text-blue-600" %>
      <span>/</span>
      <%= link_to @seating_event.name, seating_event_path(@seating_event), class: "hover:text-blue-600" %>
      <span>/</span>
      <span class="text-gray-900">Optimize Seating</span>
    </nav>
    
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Optimize Seating Arrangement</h1>
        <p class="text-gray-600 mt-1">Configure and run diversity optimization for <%= @seating_event.name %></p>
      </div>
      
      <div class="text-right">
        <div class="text-sm text-gray-600">Event Date</div>
        <div class="font-semibold"><%= @seating_event.event_date.strftime("%B %d, %Y") %></div>
      </div>
    </div>
  </div>

  <!-- Event Summary -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 text-center">
      <div>
        <div class="text-2xl font-bold text-blue-700"><%= @students_count %></div>
        <div class="text-sm text-blue-600">Total Students</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-blue-700"><%= @seating_event.total_tables %></div>
        <div class="text-sm text-blue-600">Tables</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-blue-700"><%= @seating_event.table_size %></div>
        <div class="text-sm text-blue-600">Max per Table</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-blue-700"><%= @tables_info[:capacity_utilization] %>%</div>
        <div class="text-sm text-blue-600">Capacity</div>
      </div>
    </div>
  </div>

  <%= form_with url: seating_event_seating_optimizations_path(@seating_event), method: :post, local: true, class: "space-y-6" do |form| %>
    
    <!-- Strategy Selection -->
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Optimization Strategy</h2>
      
      <div class="space-y-3">
        <% @available_strategies.each do |strategy_key, strategy_name| %>
          <label class="flex items-start space-x-3 p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
            <%= radio_button_tag :strategy, strategy_key, 
                    strategy_key == @optimization_params[:strategy], 
                    class: "mt-1", 
                    onchange: "updateStrategyParams('#{strategy_key}')" %>
            <div class="flex-1">
              <div class="font-medium"><%= strategy_name %></div>
              <div class="text-sm text-gray-600 mt-1">
                <% case strategy_key %>
                <% when 'random_swap' %>
                  Simple random swapping of students. Fast but may not find optimal solutions.
                <% when 'simulated_annealing' %>
                  Temperature-based optimization that balances exploration and exploitation. Best general-purpose choice.
                <% when 'genetic_algorithm' %>
                  Population-based evolutionary approach. Excellent for complex scenarios but takes longer.
                <% end %>
              </div>
            </div>
          </label>
        <% end %>
      </div>
    </div>

    <!-- Diversity Weights -->
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Diversity Priorities</h2>
      <p class="text-gray-600 mb-4">Adjust the importance of different diversity dimensions. Higher weights prioritize that aspect.</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @optimization_params[:weights].each do |dimension, weight| %>
          <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 capitalize">
              <%= dimension.to_s.humanize %>
              <span class="text-gray-500">(<span id="<%= dimension %>_value"><%= weight %></span>)</span>
            </label>
            <%= range_field_tag "optimization_params[weights][#{dimension}]", weight,
                    in: 0.0..1.0, step: 0.05,
                    class: "w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer",
                    oninput: "updateWeightValue('#{dimension}', this.value)" %>
            <div class="flex justify-between text-xs text-gray-500">
              <span>Low Priority</span>
              <span>High Priority</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Runtime Settings -->
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Runtime Settings</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Maximum Runtime (seconds)
          </label>
          <%= number_field_tag :max_runtime, @optimization_params[:max_runtime],
                  in: 5..300, step: 5,
                  class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          <p class="text-sm text-gray-500 mt-1">Longer runtime may produce better results but takes more time.</p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Random Seed (optional)
          </label>
          <%= number_field_tag :random_seed, "",
                  class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          <p class="text-sm text-gray-500 mt-1">Set for reproducible results. Leave blank for random.</p>
        </div>
      </div>
    </div>

    <!-- Advanced Strategy Parameters -->
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Advanced Parameters</h2>
      
      <!-- Simulated Annealing Parameters -->
      <div id="simulated_annealing_params" class="strategy-params space-y-4">
        <h3 class="font-medium text-gray-800">Simulated Annealing Settings</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Initial Temperature</label>
            <%= number_field_tag "optimization_params[strategy_params][initial_temperature]", 
                    @optimization_params[:strategy_params][:simulated_annealing][:initial_temperature],
                    step: 0.1, min: 1.0, max: 1000.0,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Cooling Rate</label>
            <%= number_field_tag "optimization_params[strategy_params][cooling_rate]", 
                    @optimization_params[:strategy_params][:simulated_annealing][:cooling_rate],
                    step: 0.01, min: 0.8, max: 0.99,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Min Temperature</label>
            <%= number_field_tag "optimization_params[strategy_params][min_temperature]", 
                    @optimization_params[:strategy_params][:simulated_annealing][:min_temperature],
                    step: 0.001, min: 0.001, max: 1.0,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
        </div>
      </div>

      <!-- Genetic Algorithm Parameters -->
      <div id="genetic_algorithm_params" class="strategy-params space-y-4 hidden">
        <h3 class="font-medium text-gray-800">Genetic Algorithm Settings</h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Population Size</label>
            <%= number_field_tag "optimization_params[strategy_params][population_size]", 
                    @optimization_params[:strategy_params][:genetic_algorithm][:population_size],
                    min: 10, max: 100, step: 5,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Mutation Rate</label>
            <%= number_field_tag "optimization_params[strategy_params][mutation_rate]", 
                    @optimization_params[:strategy_params][:genetic_algorithm][:mutation_rate],
                    step: 0.01, min: 0.01, max: 0.5,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Crossover Rate</label>
            <%= number_field_tag "optimization_params[strategy_params][crossover_rate]", 
                    @optimization_params[:strategy_params][:genetic_algorithm][:crossover_rate],
                    step: 0.01, min: 0.5, max: 1.0,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Elite Size</label>
            <%= number_field_tag "optimization_params[strategy_params][elite_size]", 
                    @optimization_params[:strategy_params][:genetic_algorithm][:elite_size],
                    min: 1, max: 10, step: 1,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
        </div>
      </div>

      <!-- Random Swap Parameters -->
      <div id="random_swap_params" class="strategy-params space-y-4 hidden">
        <h3 class="font-medium text-gray-800">Random Swap Settings</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Swap Probability</label>
            <%= number_field_tag "optimization_params[strategy_params][swap_probability]", 
                    @optimization_params[:strategy_params][:random_swap][:swap_probability],
                    step: 0.05, min: 0.1, max: 1.0,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Move Probability</label>
            <%= number_field_tag "optimization_params[strategy_params][move_probability]", 
                    @optimization_params[:strategy_params][:random_swap][:move_probability],
                    step: 0.05, min: 0.0, max: 0.5,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Shuffle Probability</label>
            <%= number_field_tag "optimization_params[strategy_params][shuffle_probability]", 
                    @optimization_params[:strategy_params][:random_swap][:shuffle_probability],
                    step: 0.05, min: 0.0, max: 0.3,
                    class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Submit Actions -->
    <div class="flex items-center justify-between pt-6 border-t border-gray-200">
      <div class="flex space-x-3">
        <%= link_to "Cancel", seating_event_path(@seating_event), 
                class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
      
      <div class="flex space-x-3">
        <%= submit_tag "Start Optimization", 
                class: "px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
                data: { disable_with: "Optimizing..." } %>
      </div>
    </div>

  <% end %>
</div>

<script>
function updateWeightValue(dimension, value) {
  document.getElementById(dimension + '_value').textContent = parseFloat(value).toFixed(2);
}

function updateStrategyParams(strategy) {
  // Hide all strategy params
  document.querySelectorAll('.strategy-params').forEach(el => el.classList.add('hidden'));
  
  // Show selected strategy params
  const paramsDiv = document.getElementById(strategy + '_params');
  if (paramsDiv) {
    paramsDiv.classList.remove('hidden');
  }
}

// Initialize with default strategy
document.addEventListener('DOMContentLoaded', function() {
  const selectedStrategy = document.querySelector('input[name="strategy"]:checked');
  if (selectedStrategy) {
    updateStrategyParams(selectedStrategy.value);
  }
});
</script>