<% content_for :title, "Review AI Inferences - #{@cohort.name}" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Review AI Inferences</h1>
        <p class="text-gray-600 mt-2">Review and correct AI-inferred attributes for <strong><%= pluralize(@students.count, 'student') %></strong> from <strong><%= @import_session.file_name %></strong></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to 'Back to Import', cohort_import_path(@cohort, @import_session), 
              class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
        <%= link_to 'Back to Cohort', cohort_path(@cohort), 
              class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
      </div>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">High Confidence</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @high_confidence_students.count %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.866-.833-2.634 0L3.732 14.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Medium Confidence</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @medium_confidence_students.count %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Low Confidence</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @low_confidence_students.count %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Total Students</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @students.count %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bulk Actions -->
  <div class="bg-white shadow rounded-lg mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Bulk Actions</h3>
    </div>
    
    <%= form_with url: bulk_update_cohort_import_session_import_reviews_path(@cohort, @import_session), 
                  method: :patch, 
                  local: true,
                  id: 'bulk-actions-form',
                  class: "p-6" do |form| %>
      
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="text-sm text-gray-600">
            <span id="selected-count">0</span> students selected
          </div>
          
          <div class="flex space-x-2">
            <button type="button" id="select-all" class="text-sm text-blue-600 hover:text-blue-500">Select All</button>
            <button type="button" id="select-none" class="text-sm text-blue-600 hover:text-blue-500">Select None</button>
          </div>
        </div>
        
        <div class="flex items-center space-x-3">
          <%= form.select :bulk_action, 
                options_for_select([
                  ['Accept High Confidence Inferences', 'accept_high_confidence'],
                  ['Reject Low Confidence Inferences', 'reject_low_confidence'],
                  ['Reset All Inferences', 'reset_all']
                ]),
                { prompt: 'Choose action...' },
                { class: 'border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm', id: 'bulk-action-select' } %>
          
          <%= form.submit "Apply to Selected", 
                class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed',
                disabled: true,
                id: 'bulk-submit' %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Students Table -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-medium text-gray-900">Students and AI Inferences</h3>
        <div class="text-sm text-gray-500">
          <span class="inline-flex items-center">
            <span class="w-3 h-3 bg-green-400 rounded-full mr-2"></span>High confidence (â‰¥80%)
          </span>
          <span class="inline-flex items-center ml-4">
            <span class="w-3 h-3 bg-yellow-400 rounded-full mr-2"></span>Medium confidence (60-79%)
          </span>
          <span class="inline-flex items-center ml-4">
            <span class="w-3 h-3 bg-red-400 rounded-full mr-2"></span>Low confidence (<60%)
          </span>
        </div>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <input type="checkbox" id="select-all-checkbox" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Student
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Gender
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Agency Level
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Department
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Seniority
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @students.each do |student| %>
            <tr class="hover:bg-gray-50">
              <!-- Checkbox -->
              <td class="px-6 py-4 whitespace-nowrap">
                <input type="checkbox" 
                       name="student_ids[]" 
                       value="<%= student.id %>" 
                       class="student-checkbox rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                       form="bulk-actions-form">
              </td>
              
              <!-- Student Info -->
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-700">
                        <%= student.name.split(' ').map(&:first).join('').upcase %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= student.name %></div>
                    <div class="text-sm text-gray-500"><%= student.title %></div>
                    <div class="text-xs text-gray-400"><%= student.organization %></div>
                  </div>
                </div>
              </td>
              
              <!-- Gender -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if student.gender %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= student.gender.humanize %>
                  </span>
                  <div class="mt-1">
                    <div class="flex items-center">
                      <div class="w-2 h-2 rounded-full mr-1 <%= student.gender_confidence >= 0.8 ? 'bg-green-400' : student.gender_confidence >= 0.6 ? 'bg-yellow-400' : 'bg-red-400' %>"></div>
                      <span class="text-xs text-gray-500"><%= (student.gender_confidence * 100).round %>%</span>
                    </div>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400">Unknown</span>
                <% end %>
              </td>
              
              <!-- Agency Level -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if student.agency_level %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= student.agency_level.humanize %>
                  </span>
                  <div class="mt-1">
                    <div class="flex items-center">
                      <div class="w-2 h-2 rounded-full mr-1 <%= student.agency_level_confidence >= 0.8 ? 'bg-green-400' : student.agency_level_confidence >= 0.6 ? 'bg-yellow-400' : 'bg-red-400' %>"></div>
                      <span class="text-xs text-gray-500"><%= (student.agency_level_confidence * 100).round %>%</span>
                    </div>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400">Unknown</span>
                <% end %>
              </td>
              
              <!-- Department Type -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if student.department_type %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= student.department_type.humanize %>
                  </span>
                  <div class="mt-1">
                    <div class="flex items-center">
                      <div class="w-2 h-2 rounded-full mr-1 <%= student.department_type_confidence >= 0.8 ? 'bg-green-400' : student.department_type_confidence >= 0.6 ? 'bg-yellow-400' : 'bg-red-400' %>"></div>
                      <span class="text-xs text-gray-500"><%= (student.department_type_confidence * 100).round %>%</span>
                    </div>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400">Unknown</span>
                <% end %>
              </td>
              
              <!-- Seniority Level -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if student.seniority_level %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= student.seniority_level.humanize %>
                  </span>
                  <div class="mt-1">
                    <div class="flex items-center">
                      <div class="w-2 h-2 rounded-full mr-1 <%= student.seniority_level_confidence >= 0.8 ? 'bg-green-400' : student.seniority_level_confidence >= 0.6 ? 'bg-yellow-400' : 'bg-red-400' %>"></div>
                      <span class="text-xs text-gray-500"><%= (student.seniority_level_confidence * 100).round %>%</span>
                    </div>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400">Unknown</span>
                <% end %>
              </td>
              
              <!-- Actions -->
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to 'Edit', edit_cohort_import_session_import_review_path(@cohort, @import_session, student), 
                      class: 'text-blue-600 hover:text-blue-900' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Finalize Import -->
  <div class="mt-8 bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Finalize Import</h3>
    </div>
    
    <div class="p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Once you're satisfied with the AI inferences, you can finalize the import to add all students to the cohort.</p>
          <p class="text-xs text-gray-500 mt-1">You can always edit student attributes later from the cohort page.</p>
        </div>
        
        <div class="flex space-x-3">
          <%= link_to 'Continue Reviewing', '#', 
                class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
          <%= link_to 'Finalize Import', confirm_cohort_import_session_import_reviews_path(@cohort, @import_session), 
                method: :patch,
                confirm: "Are you sure you want to finalize this import? This will add all #{@students.count} students to the cohort.",
                class: 'inline-flex items-center px-6 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500' %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Handle checkbox selection
  const selectAllCheckbox = document.getElementById('select-all-checkbox');
  const studentCheckboxes = document.querySelectorAll('.student-checkbox');
  const selectedCount = document.getElementById('selected-count');
  const selectAllButton = document.getElementById('select-all');
  const selectNoneButton = document.getElementById('select-none');
  const bulkActionSelect = document.getElementById('bulk-action-select');
  const bulkSubmit = document.getElementById('bulk-submit');

  function updateUI() {
    const checkedBoxes = document.querySelectorAll('.student-checkbox:checked');
    const hasSelection = checkedBoxes.length > 0;
    const hasAction = bulkActionSelect.value !== '';
    
    selectedCount.textContent = checkedBoxes.length;
    bulkSubmit.disabled = !(hasSelection && hasAction);
    
    selectAllCheckbox.indeterminate = checkedBoxes.length > 0 && checkedBoxes.length < studentCheckboxes.length;
    selectAllCheckbox.checked = checkedBoxes.length === studentCheckboxes.length;
  }

  selectAllCheckbox.addEventListener('change', function() {
    studentCheckboxes.forEach(checkbox => {
      checkbox.checked = this.checked;
    });
    updateUI();
  });

  studentCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', updateUI);
  });

  selectAllButton.addEventListener('click', function() {
    studentCheckboxes.forEach(checkbox => {
      checkbox.checked = true;
    });
    updateUI();
  });

  selectNoneButton.addEventListener('click', function() {
    studentCheckboxes.forEach(checkbox => {
      checkbox.checked = false;
    });
    updateUI();
  });

  bulkActionSelect.addEventListener('change', updateUI);

  // Initial UI update
  updateUI();
</script>