<!-- Dashboard Header -->
<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-2">CHDS Seating Charter Dashboard</h1>
  <p class="text-gray-600">AI-powered seating optimization for emergency management professionals</p>
</div>

<!-- Quick Stats -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">C</span>
        </div>
      </div>
      <div class="ml-4">
        <h3 class="text-lg font-semibold text-gray-900"><%= @cohorts.count %></h3>
        <p class="text-sm text-gray-500">Total Cohorts</p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">A</span>
        </div>
      </div>
      <div class="ml-4">
        <h3 class="text-lg font-semibold text-gray-900"><%= @active_cohorts %></h3>
        <p class="text-sm text-gray-500">Active Cohorts</p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">S</span>
        </div>
      </div>
      <div class="ml-4">
        <h3 class="text-lg font-semibold text-gray-900"><%= @total_students %></h3>
        <p class="text-sm text-gray-500">Total Students</p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">I</span>
        </div>
      </div>
      <div class="ml-4">
        <h3 class="text-lg font-semibold text-gray-900"><%= @recent_imports.count %></h3>
        <p class="text-sm text-gray-500">Recent Imports</p>
      </div>
    </div>
  </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Cohorts List -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-900">Your Cohorts</h2>
        <%= link_to "New Cohort", new_cohort_path, 
              class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
      </div>
    </div>
    <div class="p-6">
      <% if @cohorts.any? %>
        <div class="space-y-4">
          <% @cohorts.each do |cohort| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold text-gray-900">
                    <%= link_to cohort.name, cohort_path(cohort), class: "hover:text-blue-600" %>
                  </h3>
                  <p class="text-sm text-gray-500 mt-1">
                    <%= cohort.start_date.strftime("%b %d") %> - <%= cohort.end_date.strftime("%b %d, %Y") %>
                  </p>
                  <div class="flex items-center space-x-4 mt-2">
                    <span class="text-sm text-gray-600">
                      <span class="font-medium"><%= cohort.students_count %></span> students
                    </span>
                    <span class="text-sm text-gray-600">
                      <span class="font-medium"><%= cohort.seating_events.count %></span> events
                    </span>
                  </div>
                </div>
                <div class="flex-shrink-0">
                  <% if cohort.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Active
                    </span>
                  <% elsif cohort.upcoming? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      Upcoming
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Past
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="text-gray-400 text-4xl mb-4">üìö</div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No cohorts yet</h3>
          <p class="text-gray-500 mb-4">Create your first cohort to start organizing seating arrangements.</p>
          <%= link_to "Create Cohort", new_cohort_path, 
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Quick Actions</h2>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <%= link_to new_cohort_path, 
              class: "flex items-center p-4 bg-blue-50 border border-blue-200 rounded-lg hover:bg-blue-100 transition-colors group" do %>
          <div class="flex-shrink-0 mr-4">
            <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center">
              <span class="text-white text-xl">+</span>
            </div>
          </div>
          <div>
            <h3 class="font-semibold text-blue-900 group-hover:text-blue-700">Create New Cohort</h3>
            <p class="text-sm text-blue-600">Start a new cohort for seating optimization</p>
          </div>
        <% end %>

        <% if current_user.admin? %>
          <%= link_to admin_ai_configurations_path, 
                class: "flex items-center p-4 bg-purple-50 border border-purple-200 rounded-lg hover:bg-purple-100 transition-colors group" do %>
            <div class="flex-shrink-0 mr-4">
              <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center">
                <span class="text-white text-xl">‚öôÔ∏è</span>
              </div>
            </div>
            <div>
              <h3 class="font-semibold text-purple-900 group-hover:text-purple-700">AI Configuration</h3>
              <p class="text-sm text-purple-600">Configure AI models and settings</p>
            </div>
          <% end %>

          <%= link_to admin_cost_trackings_path, 
                class: "flex items-center p-4 bg-green-50 border border-green-200 rounded-lg hover:bg-green-100 transition-colors group" do %>
            <div class="flex-shrink-0 mr-4">
              <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center">
                <span class="text-white text-xl">üí∞</span>
              </div>
            </div>
            <div>
              <h3 class="font-semibold text-green-900 group-hover:text-green-700">Cost Tracking</h3>
              <p class="text-sm text-green-600">Monitor AI API usage and costs</p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Welcome Message for First Time Users -->
<% if @cohorts.empty? %>
  <div class="mt-12 bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg p-8">
    <div class="max-w-3xl mx-auto text-center">
      <div class="text-6xl mb-4">üéØ</div>
      <h2 class="text-2xl font-bold text-blue-900 mb-4">Welcome to CHDS Seating Charter</h2>
      <p class="text-blue-700 mb-6 text-lg">
        Use AI to create optimal seating arrangements for your emergency management cohorts. 
        Our system maximizes diversity and cross-agency interaction for better learning outcomes.
      </p>
      <div class="flex justify-center space-x-4">
        <%= link_to "Create Your First Cohort", new_cohort_path, 
              class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-medium transition-colors" %>
        <% if current_user.admin? %>
          <%= link_to "Configure AI Settings", admin_ai_configurations_path, 
                class: "bg-white text-blue-600 border border-blue-300 hover:bg-blue-50 px-6 py-3 rounded-md font-medium transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
