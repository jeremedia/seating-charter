<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-2xl font-semibold text-gray-900">Cost Tracking</h1>
        <p class="mt-2 text-sm text-gray-700">Monitor OpenAI API usage and costs across all requests.</p>
      </div>
    </div>

    <!-- Summary Statistics -->
    <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Cost</dt>
                <dd class="text-lg font-medium text-gray-900">$<%= '%.4f' % @total_cost %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Tokens</dt>
                <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@total_tokens) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Requests Today</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @requests_today %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Cost Today</dt>
                <dd class="text-lg font-medium text-gray-900">$<%= '%.4f' % @cost_today %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Filters</h3>
        <%= form_with url: admin_cost_trackings_path, method: :get, local: true, class: "mt-4 grid grid-cols-1 gap-4 sm:grid-cols-4" do |form| %>
          <div>
            <%= form.label :user_id, "User", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :user_id, 
                options_from_collection_for_select(User.all, :id, :email, params[:user_id]),
                { prompt: 'All Users' },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>
          
          <div>
            <%= form.label :purpose, "Purpose", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :purpose, 
                options_for_select([
                  ['Roster Parsing', 'roster_parsing'],
                  ['Attribute Inference', 'attribute_inference'],
                  ['Test Interface', 'test_interface'],
                  ['Manual Test', 'manual_test']
                ], params[:purpose]),
                { prompt: 'All Purposes' },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>
          
          <div>
            <%= form.label :ai_model_used, "Model", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :ai_model_used, 
                options_for_select(CostTracking.distinct.pluck(:ai_model_used).compact.map { |model| [model, model] }, params[:ai_model_used]),
                { prompt: 'All Models' },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>
          
          <div class="flex items-end">
            <%= form.submit "Apply Filters", 
                class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Records Table -->
    <div class="mt-8 flex flex-col">
      <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Model</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Purpose</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tokens</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cost</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                  <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @cost_trackings.each do |tracking| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900"><%= tracking.user.email %></div>
                      <div class="text-sm text-gray-500">ID: <%= tracking.request_id %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <%= tracking.ai_model_used %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <%= tracking.purpose.humanize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <div>In: <%= number_with_delimiter(tracking.input_tokens) %></div>
                      <div>Out: <%= number_with_delimiter(tracking.output_tokens) %></div>
                      <div class="font-medium">Total: <%= number_with_delimiter(tracking.input_tokens + tracking.output_tokens) %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      $<%= '%.6f' % tracking.cost_estimate %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <div><%= tracking.created_at.strftime('%m/%d/%Y') %></div>
                      <div><%= tracking.created_at.strftime('%I:%M %p') %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <%= link_to 'View', admin_cost_tracking_path(tracking), 
                          class: "text-indigo-600 hover:text-indigo-900" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            
            <% if @cost_trackings.empty? %>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                  <path d="M9 17a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0116.07 12h15.86a2 2 0 011.664.89l.812 1.22A2 2 0 0036.07 15H37a2 2 0 012 2v26a2 2 0 01-2 2H11a2 2 0 01-2-2V17z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                  <path d="M15 23a3 3 0 016 0v1a3 3 0 01-6 0v-1z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No cost tracking records</h3>
                <p class="mt-1 text-sm text-gray-500">Records will appear here after AI API calls are made.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <% if @cost_trackings.respond_to?(:current_page) %>
      <div class="mt-6">
        <%= paginate @cost_trackings, theme: 'twitter_bootstrap_4' %>
      </div>
    <% end %>
  </div>
</div>