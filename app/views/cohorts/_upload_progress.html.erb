<div class="bg-white border border-blue-200 rounded-lg p-6 shadow-sm">
  <% 
    step_icons = {
      "upload" => "📤",
      "extracting_metadata" => "🔍", 
      "parsing_roster" => "📋",
      "complete" => "✅",
      "error" => "❌"
    }
    
    elapsed_time = start_time ? ((Time.current.to_f - start_time).round(1)) : 0
    estimated_remaining = case step
    when "upload" then 35
    when "extracting_metadata" then 25  
    when "parsing_roster" then 10
    when "complete" then 0
    else 0
    end
  %>

  <!-- Header -->
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center text-xl">
          <%= step_icons[step] || "⏳" %>
        </div>
      </div>
      <div>
        <h3 class="text-lg font-medium text-gray-900">
          <%= case step
              when "upload" then "Uploading PDF"
              when "extracting_metadata" then "Extracting Information"
              when "parsing_roster" then "Parsing Student Roster"
              when "complete" then "Processing Complete"
              when "error" then "Processing Error"
              else "Processing"
              end %>
        </h3>
        <p class="text-sm text-gray-600"><%= message %></p>
      </div>
    </div>
    
    <!-- Time Display -->
    <div class="text-right text-sm text-gray-500">
      <div>Elapsed: <%= elapsed_time %>s</div>
      <% if estimated_remaining > 0 %>
        <div>Est. remaining: ~<%= estimated_remaining %>s</div>
      <% end %>
    </div>
  </div>

  <!-- Progress Bar -->
  <% unless step == "error" %>
    <div class="mb-4">
      <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
        <span>Progress</span>
        <span><%= progress || 0 %>%</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-blue-600 h-2 rounded-full transition-all duration-500 ease-out" 
             style="width: <%= progress || 0 %>%"></div>
      </div>
    </div>
  <% end %>

  <!-- Step Indicators -->
  <div class="flex items-center justify-between">
    <% steps = [
         { key: "upload", label: "Upload", icon: "📤" },
         { key: "extracting_metadata", label: "Extract Info", icon: "🔍" },
         { key: "parsing_roster", label: "Parse Roster", icon: "📋" },
         { key: "complete", label: "Complete", icon: "✅" }
       ] %>
    
    <% steps.each_with_index do |step_info, index| %>
      <div class="flex items-center <%= 'flex-1' unless index == steps.length - 1 %>">
        <div class="flex items-center">
          <div class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center text-sm
                      <%= if step_info[:key] == step || (step == 'error' && index == 0)
                            'bg-blue-600 text-white'
                          elsif (step == 'complete') || 
                                (step == 'parsing_roster' && ['upload', 'extracting_metadata'].include?(step_info[:key])) ||
                                (step == 'extracting_metadata' && step_info[:key] == 'upload')
                            'bg-green-500 text-white'
                          else
                            'bg-gray-300 text-gray-600'
                          end %>">
            <%= step_info[:icon] %>
          </div>
          <span class="ml-2 text-xs font-medium text-gray-700 hidden sm:block">
            <%= step_info[:label] %>
          </span>
        </div>
        
        <% unless index == steps.length - 1 %>
          <div class="flex-1 h-0.5 mx-4
                      <%= if (step == 'complete') || 
                              (step == 'parsing_roster' && ['extracting_metadata'].include?(steps[index + 1][:key])) ||
                              (step == 'extracting_metadata' && steps[index + 1][:key] == 'extracting_metadata')
                            'bg-green-500'
                          else
                            'bg-gray-300'
                          end %>">
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Error State -->
  <% if step == "error" %>
    <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-md">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Processing Failed</h3>
          <p class="mt-1 text-sm text-red-700"><%= message %></p>
          <div class="mt-3">
            <button type="button" 
                    data-action="click->cohort-upload#resetUpload"
                    class="inline-flex items-center px-3 py-1 border border-red-300 rounded-md text-xs font-medium text-red-700 bg-red-50 hover:bg-red-100">
              Try Again
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Success State -->
  <% if step == "complete" && defined?(metadata) && defined?(students_preview) %>
    <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-md">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-green-800">Processing Complete!</h3>
            <p class="mt-1 text-sm text-green-700">
              Found <%= students_preview[:estimated_total] || 0 %> students. 
              <% if metadata[:name] %>Cohort: "<%= metadata[:name] %>"<% end %>
            </p>
          </div>
        </div>
        <div class="text-xs text-green-600 font-medium">
          <%= elapsed_time %>s total
        </div>
      </div>
    </div>
  <% end %>

  <!-- Loading Animation -->
  <% unless ["complete", "error"].include?(step) %>
    <div class="mt-4 flex items-center justify-center">
      <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
      <span class="ml-2 text-sm text-gray-600">Processing...</span>
    </div>
  <% end %>
</div>