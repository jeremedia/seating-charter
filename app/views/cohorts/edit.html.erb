<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-sm mb-8 p-6">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit Cohort</h1>
          <p class="mt-2 text-gray-600">Update cohort information and settings</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to @cohort, class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            View
          <% end %>
          <%= link_to cohorts_path, class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"/>
            </svg>
            Back
          <% end %>
        </div>
      </div>
    </div>

    <!-- Edit Form -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <%= form_with(model: @cohort, local: true, class: "space-y-6") do |form| %>
        <% if @cohort.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= @cohort.errors.count %> errors with your submission
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside">
                    <% @cohort.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, class: "w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "e.g., Emergence 2501" %>
          </div>

          <div>
            <%= form.label :program, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :program, 
                ['Emergence', 'Executive Leaders Program', 'Fusion Center Leaders', 'Radiological Emergency Preparedness', 'Other'], 
                { prompt: 'Select a program' }, 
                class: "w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :start_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.date_field :start_date, class: "w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :end_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.date_field :end_date, class: "w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :location, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :location, class: "w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "e.g., Monterey, CA" %>
          </div>

          <div>
            <%= form.label :max_students, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :max_students, class: "w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "40" %>
          </div>
        </div>

        <div>
          <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :notes, rows: 4, class: "w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Any additional notes or special requirements..." %>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t">
          <div class="flex space-x-3">
            <%= form.submit "Update Cohort", class: "px-6 py-3 bg-blue-900 text-white font-semibold rounded-lg hover:bg-blue-800 transition cursor-pointer" %>
            <%= link_to "Cancel", @cohort, class: "px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition" %>
          </div>

          <!-- Danger Zone -->
          <div class="text-right">
            <%= link_to @cohort, method: :delete, 
                data: { 
                  confirm: "Are you sure you want to delete this cohort? This will also delete all associated students and seating arrangements.", 
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure you want to delete this cohort? This will also delete all associated students and seating arrangements."
                }, 
                class: "px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition inline-flex items-center" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              Delete Cohort
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Current Students -->
    <% if @cohort.students.any? %>
      <div class="bg-white rounded-xl shadow-sm p-6 mt-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">
          Current Students (<%= @cohort.students.count %>)
        </h2>
        <div class="text-sm text-gray-600">
          <p>This cohort has <%= pluralize(@cohort.students.count, 'student') %> enrolled.</p>
          <p class="mt-2">To manage students, use the <%= link_to "cohort dashboard", @cohort, class: "text-blue-600 hover:underline" %>.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>