<% content_for :title, "Sign Up - CHDS Seating Charter" %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mb-4">
        <h1 class="text-3xl font-bold text-blue-900">CHDS</h1>
        <p class="text-sm text-gray-600 mt-1">Center for Homeland Defense and Security</p>
        <p class="text-xs text-gray-500">Naval Postgraduate School</p>
      </div>
      <h2 class="text-2xl font-semibold text-gray-900 mb-2">Create Account</h2>
      <p class="text-gray-600">Join the Seating Charter System</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow-lg rounded-lg border border-gray-200 p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, html: { class: "space-y-6" }) do |f| %>
        
        <!-- Error Messages -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all",
                placeholder: "Enter your email address" %>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            Password
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-500 font-normal">
                (<%= @minimum_password_length %> characters minimum)
              </span>
            <% end %>
          <% end %>
          <%= f.password_field :password, 
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all",
                placeholder: "Create a secure password" %>
        </div>

        <!-- Password Confirmation Field -->
        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all",
                placeholder: "Confirm your password" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Create Account", 
                class: "w-full bg-blue-900 hover:bg-blue-800 text-white font-semibold py-3 px-4 rounded-lg transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>

    <!-- Links -->
    <%= render "devise/shared/links" %>
    
    <!-- Footer Info -->
    <div class="text-center text-xs text-gray-500 mt-8">
      <p>By creating an account, you agree to CHDS terms and policies</p>
      <p class="mt-1">For assistance, contact your system administrator</p>
    </div>
  </div>
</div>
