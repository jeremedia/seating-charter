<% content_for :title, "Resend Confirmation - CHDS Seating Charter" %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mb-4">
        <h1 class="text-3xl font-bold text-blue-900">CHDS</h1>
        <p class="text-sm text-gray-600 mt-1">Center for Homeland Defense and Security</p>
        <p class="text-xs text-gray-500">Naval Postgraduate School</p>
      </div>
      <h2 class="text-2xl font-semibold text-gray-900 mb-2">Resend Confirmation</h2>
      <p class="text-gray-600">We'll send you a new confirmation email</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow-lg rounded-lg border border-gray-200 p-8">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        
        <!-- Error Messages -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all",
                placeholder: "Enter your email address" %>
          <p class="mt-2 text-sm text-gray-500">
            We'll send confirmation instructions to this email address
          </p>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Resend Confirmation Instructions", 
                class: "w-full bg-blue-900 hover:bg-blue-800 text-white font-semibold py-3 px-4 rounded-lg transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>

    <!-- Links -->
    <%= render "devise/shared/links" %>
    
    <!-- Footer Info -->
    <div class="text-center text-xs text-gray-500 mt-8">
      <p>Check your spam folder if you don't receive the email</p>
      <p class="mt-1">Confirmation emails may take a few minutes to arrive</p>
    </div>
  </div>
</div>
