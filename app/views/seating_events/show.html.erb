<% content_for :title, "#{@seating_event.name} - #{@cohort.name}" %>

<div class="max-w-7xl mx-auto" data-controller="seating-generator">
  <!-- Loading Overlay -->
  <div data-seating-generator-target="loadingOverlay" class="hidden fixed inset-0 bg-gray-600 bg-opacity-75 z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
      <div class="text-center">
        <svg class="animate-spin h-12 w-12 text-blue-600 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Generating Optimal Seating</h3>
        <p data-seating-generator-target="progressMessage" class="text-sm text-gray-600 mb-4">Initializing seating algorithm...</p>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div data-seating-generator-target="progressBar" class="bg-blue-600 h-2 rounded-full transition-all duration-500" style="width: 0%"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @seating_event.name %></h1>
        <p class="text-gray-600 mt-1">
          <%= @cohort.name %> • <%= @seating_event.event_date.strftime("%B %d, %Y") %>
        </p>
        <div class="flex items-center gap-4 mt-2">
          <span class="text-sm text-gray-500">
            <strong><%= @seating_event.total_tables %></strong> tables × 
            <strong><%= @seating_event.table_size %></strong> seats = 
            <strong><%= @seating_event.max_students_capacity %></strong> total capacity
          </span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= @seating_event.event_type.humanize %>
            <% if @seating_event.event_type != 'single_day' && @seating_arrangements.any? %>
              • <%= pluralize(@seating_arrangements.count, 'day') %>
            <% end %>
          </span>
        </div>
      </div>
      
      <div class="flex space-x-3">
        <% if !@seating_event.has_arrangement? %>
          <%= button_to 'Generate Seating', 
                generate_cohort_seating_event_path(@cohort, @seating_event),
                method: :post,
                params: { days: @seating_event.event_type == 'single_day' ? 1 : 3 },
                form: { 
                  data: { 
                    turbo: false,
                    action: "submit->seating-generator#generate"
                  }
                },
                data: { 
                  seating_generator_target: "button",
                  original_text: "Generate Seating"
                },
                class: 'inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md shadow-sm text-sm font-medium hover:bg-green-700' %>
        <% else %>
          <% if @seating_arrangements.count > 1 %>
            <%= link_to 'Export All Days PDF', 
                  export_all_days_cohort_seating_event_path(@cohort, @seating_event),
                  class: 'inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md shadow-sm text-sm font-medium hover:bg-blue-700' %>
          <% end %>
          
          <%= button_to 'Regenerate Seating', 
                generate_cohort_seating_event_path(@cohort, @seating_event),
                method: :post,
                params: { days: @seating_event.event_type == 'single_day' ? 1 : 3 },
                form: { 
                  data: { 
                    turbo: false,
                    action: "submit->seating-generator#generate",
                    turbo_confirm: 'This will replace the existing seating arrangement. Continue?'
                  }
                },
                data: { 
                  seating_generator_target: "button",
                  original_text: "Regenerate Seating"
                },
                class: 'inline-flex items-center px-4 py-2 bg-orange-600 text-white rounded-md shadow-sm text-sm font-medium hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500' %>
        <% end %>
        
        <%= link_to 'Edit Chart', edit_cohort_seating_event_path(@cohort, @seating_event), 
              class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
        
        <%= link_to 'Back to Cohort', cohort_path(@cohort), 
              class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
      </div>
    </div>
  </div>

  <%= turbo_frame_tag "seating_arrangements" do %>
    <% if @seating_arrangements.any? %>
      <!-- Seating Arrangements -->
      <div class="space-y-8">
      <% @seating_arrangements.each_with_index do |arrangement, index| %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-xl font-semibold text-gray-900">
                  Day <%= arrangement.day_number || index + 1 %> Arrangement
                </h2>
                <p class="text-sm text-gray-500 mt-1">
                  Generated <%= time_ago_in_words(arrangement.created_at) %> ago
                  <% if arrangement.overall_score > 0 %>
                    • Diversity Score: <strong><%= arrangement.formatted_score %></strong>
                  <% end %>
                </p>
              </div>
              <div class="flex gap-2">
                <%= form_with url: cohort_seating_event_seating_arrangement_exports_path(@cohort, @seating_event, arrangement),
                              method: :post,
                              local: true,
                              html: { style: 'display: inline;' } do |f| %>
                  <%= hidden_field_tag :format, 'pdf' %>
                  <%= f.submit 'Export PDF', 
                        class: 'text-sm text-blue-600 hover:text-blue-800 bg-transparent border-0 cursor-pointer' %>
                <% end %>
                <%= link_to 'Edit Layout', '#', 
                      class: 'text-sm text-green-600 hover:text-green-800' %>
              </div>
            </div>
          </div>
          
          <div class="p-6">
            <% if arrangement.table_assignments.any? %>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <% arrangement.table_assignments.includes(:student).group_by(&:table_number).sort.each do |table_number, assignments| %>
                  <div class="bg-gray-50 rounded-lg p-4 border-2 border-gray-200 flex flex-col h-96">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3 text-center">
                      Table <%= table_number %>
                    </h3>
                    
                    <div class="space-y-2 flex-1 overflow-y-auto">
                      <% if assignments.any? %>
                        <% assignments.sort_by(&:seat_position).each do |assignment| %>
                          <% student = assignment.student %>
                          <div class="flex items-center p-2 bg-white rounded border border-gray-200 h-20">
                            <div class="flex-shrink-0 h-8 w-8">
                              <div class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                                <span class="text-xs font-medium text-gray-700">
                                  <%= student.name.split(' ').map(&:first).join('').upcase[0..1] %>
                                </span>
                              </div>
                            </div>
                            <div class="ml-3 flex-1 w-0">
                              <div class="flex items-center gap-2">
                                <span class="text-xs text-blue-800 px-1.5 py-0.5 rounded font-medium">
                                  Seat <%= assignment.seat_position %>
                                </span>
                              </div>
                              <p class="text-sm font-medium text-gray-900 truncate"><%= student.name %></p>
                              <p class="text-xs text-gray-500 truncate"><%= student.organization.present? ? student.organization : "No Title" %></p>
                            </div>
                            <div class="flex gap-1 flex-shrink-0">
                              <% if student.inferences&.dig('gender', 'value') == 'male' %>
                                <span class="inline-block w-2 h-2 bg-blue-500 rounded-full" title="Male"></span>
                              <% elsif student.inferences&.dig('gender', 'value') == 'female' %>
                                <span class="inline-block w-2 h-2 bg-pink-500 rounded-full" title="Female"></span>
                              <% else %>
                                <span class="inline-block w-2 h-2 bg-gray-400 rounded-full" title="Unknown"></span>
                              <% end %>
                              
                              <% case student.inferences&.dig('agency_level', 'value') %>
                              <% when 'federal' %>
                                <span class="inline-block w-2 h-2 bg-purple-500 rounded-full" title="Federal"></span>
                              <% when 'state' %>
                                <span class="inline-block w-2 h-2 bg-green-500 rounded-full" title="State"></span>
                              <% when 'local' %>
                                <span class="inline-block w-2 h-2 bg-yellow-500 rounded-full" title="Local"></span>
                              <% when 'private' %>
                                <span class="inline-block w-2 h-2 bg-orange-500 rounded-full" title="Private"></span>
                              <% end %>
                            </div>
                          </div>
                        <% end %>
                      <% else %>
                        <p class="text-sm text-gray-400 text-center py-4">No students assigned</p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- Legend -->
              <div class="mt-8 p-4 bg-gray-50 rounded-lg">
                <h4 class="text-sm font-medium text-gray-900 mb-2">Legend</h4>
                <div class="flex flex-wrap gap-4 text-xs">
                  <div class="flex items-center gap-1">
                    <span class="inline-block w-3 h-3 bg-blue-500 rounded-full"></span>
                    <span>Male</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="inline-block w-3 h-3 bg-pink-500 rounded-full"></span>
                    <span>Female</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="inline-block w-3 h-3 bg-purple-500 rounded-full"></span>
                    <span>Federal</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="inline-block w-3 h-3 bg-green-500 rounded-full"></span>
                    <span>State</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="inline-block w-3 h-3 bg-yellow-500 rounded-full"></span>
                    <span>Local</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="inline-block w-3 h-3 bg-orange-500 rounded-full"></span>
                    <span>Private</span>
                  </div>
                </div>
              </div>
            <% else %>
              <p class="text-gray-500 text-center py-8">No table assignments yet. Click "Generate Seating" to create an arrangement.</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- No Arrangements Yet -->
    <div class="bg-white shadow rounded-lg">
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No Seating Arrangements Yet</h3>
        <p class="mt-1 text-sm text-gray-500">Click the button below to generate optimal seating arrangements.</p>
        <div class="mt-6">
          <%= button_to 'Generate Seating Now', 
                generate_cohort_seating_event_path(@cohort, @seating_event),
                method: :post,
                params: { days: @seating_event.event_type == 'single_day' ? 1 : 3 },
                class: 'inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md shadow-sm text-sm font-medium hover:bg-green-700' %>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
</div>