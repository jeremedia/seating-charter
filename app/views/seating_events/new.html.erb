<% content_for :title, "Create Seating Chart - #{@cohort.name}" %>

<div class="max-w-4xl mx-auto" data-controller="seating-generator">
  <!-- Loading Overlay -->
  <div data-seating-generator-target="loadingOverlay" class="hidden fixed inset-0 bg-gray-600 bg-opacity-75 z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
      <div class="text-center">
        <svg class="animate-spin h-12 w-12 text-blue-600 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Creating Seating Chart</h3>
        <p data-seating-generator-target="progressMessage" class="text-sm text-gray-600 mb-4">Initializing seating algorithm...</p>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div data-seating-generator-target="progressBar" class="bg-blue-600 h-2 rounded-full transition-all duration-500" style="width: 0%"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Create Seating Chart</h1>
    <p class="text-gray-600 mt-1"><%= @cohort.name %> - <%= pluralize(@cohort.students.count, 'student') %> available</p>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: [@cohort, @seating_event], local: true, data: { turbo: false, action: "submit->seating-generator#generate" } do |form| %>
      <% if @seating_event.errors.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-sm font-medium text-red-800 mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside text-sm text-red-700">
            <% @seating_event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-6">
        <!-- Basic Information -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Event Details</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :name, 
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                    placeholder: "e.g., Week 1 Seating",
                    required: true %>
            </div>

            <div>
              <%= form.label :event_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.date_field :event_date, 
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                    required: true %>
            </div>

            <div class="md:col-span-2">
              <%= form.label :event_type, "Event Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :event_type,
                    options_for_select([
                      ['Single Day', 'single_day'],
                      ['In-Residence', 'multi_day'],
                      ['Extended Workshop', 'workshop']
                    ], @seating_event.event_type),
                    {},
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            </div>
          </div>
        </div>

        <!-- Table Configuration -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Table Configuration</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :total_tables, "Number of Tables", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.number_field :total_tables, 
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                    min: 1,
                    max: 20,
                    required: true %>
              <p class="mt-1 text-xs text-gray-500">How many tables will be in the room?</p>
            </div>

            <div>
              <%= form.label :table_size, "Seats per Table", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.number_field :table_size, 
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                    min: 3,
                    max: 8,
                    required: true %>
              <p class="mt-1 text-xs text-gray-500">How many people can sit at each table?</p>
            </div>
          </div>

          <!-- Capacity Calculator -->
          <div class="mt-4 p-4 bg-blue-50 rounded-lg">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-blue-900">Total Capacity</p>
                <p class="text-xs text-blue-700 mt-1">
                  <span id="capacity-display">30</span> seats 
                  (<span id="tables-display">5</span> tables Ã— <span id="seats-display">6</span> seats)
                </p>
              </div>
              <div>
                <p class="text-sm font-medium text-blue-900">Students to Seat</p>
                <p class="text-xs text-blue-700 mt-1"><%= @cohort.students.count %> students enrolled</p>
              </div>
            </div>
            <div id="capacity-warning" class="hidden mt-3 p-3 bg-yellow-100 rounded-md">
              <p class="text-sm text-yellow-800">
                <strong>Warning:</strong> Not enough seats for all students. Some students won't be seated.
              </p>
            </div>
          </div>
        </div>

        <!-- Multi-Day Configuration -->
        <div id="multi-day-config">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Multi-Day Settings</h3>
          
          <% if @cohort.start_date && @cohort.end_date %>
            <div class="mb-4 p-3 bg-blue-50 rounded-lg">
              <p class="text-sm text-blue-900">
                <strong>Cohort Duration:</strong> <%= @cohort.start_date.strftime("%B %d") %> - <%= @cohort.end_date.strftime("%B %d, %Y") %>
                (<%= @default_days %> days)
              </p>
            </div>
          <% end %>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="days" class="block text-sm font-medium text-gray-700 mb-1">Number of Days</label>
              <input type="number" name="days" id="days" 
                     class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                     min="1" max="10" value="<%= @default_days %>">
              <p class="mt-1 text-xs text-gray-500">Generate unique seating for each day</p>
            </div>

            <div>
              <label for="strategy" class="block text-sm font-medium text-gray-700 mb-1">Optimization Strategy</label>
              <select name="strategy" id="strategy"
                      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                <option value="diversity_maximization">Maximum Diversity</option>
                <option value="interaction_tracking">Track Interactions</option>
                <option value="balanced_exposure">Balanced Exposure</option>
              </select>
              <p class="mt-1 text-xs text-gray-500">How to optimize seating arrangements</p>
            </div>
          </div>

          <div class="mt-4 p-4 bg-green-50 rounded-lg">
            <p class="text-sm text-green-800">
              <strong>Multi-Day Optimization:</strong> The system will ensure students sit with different people each day, 
              maximizing networking opportunities and diverse interactions across the event.
            </p>
          </div>
        </div>

        <!-- Diversity Goals -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Diversity Goals</h3>
          <p class="text-sm text-gray-500 mb-3">The system will automatically optimize for:</p>
          
          <div class="space-y-2">
            <label class="flex items-start">
              <input type="checkbox" checked disabled class="mt-1 mr-3 rounded border-gray-300">
              <div>
                <span class="text-sm font-medium text-gray-700">Gender Balance</span>
                <p class="text-xs text-gray-500">Distribute genders evenly across tables</p>
              </div>
            </label>
            
            <label class="flex items-start">
              <input type="checkbox" checked disabled class="mt-1 mr-3 rounded border-gray-300">
              <div>
                <span class="text-sm font-medium text-gray-700">Agency Diversity</span>
                <p class="text-xs text-gray-500">Mix federal, state, local, and private sector</p>
              </div>
            </label>
            
            <label class="flex items-start">
              <input type="checkbox" checked disabled class="mt-1 mr-3 rounded border-gray-300">
              <div>
                <span class="text-sm font-medium text-gray-700">Department Variety</span>
                <p class="text-xs text-gray-500">Combine different department types at each table</p>
              </div>
            </label>
            
            <label class="flex items-start">
              <input type="checkbox" checked disabled class="mt-1 mr-3 rounded border-gray-300">
              <div>
                <span class="text-sm font-medium text-gray-700">Seniority Mix</span>
                <p class="text-xs text-gray-500">Balance experience levels for peer learning</p>
              </div>
            </label>
          </div>
        </div>

        <!-- Generate Options -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Generation Options</h3>
          
          <label class="flex items-center">
            <%= check_box_tag :generate_now, '1', true, class: "mr-3 rounded border-gray-300" %>
            <div>
              <span class="text-sm font-medium text-gray-700">Generate seating immediately</span>
              <p class="text-xs text-gray-500">Create optimal seating arrangements as soon as the event is saved</p>
            </div>
          </label>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-end space-x-3">
        <%= link_to 'Cancel', cohort_path(@cohort), 
              class: 'px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
        <%= form.submit 'Create Seating Chart', 
              data: { seating_generator_target: "button", original_text: "Create Seating Chart" },
              class: 'px-4 py-2 bg-blue-600 text-white rounded-md shadow-sm text-sm font-medium hover:bg-blue-700' %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Update capacity display
  const tablesInput = document.getElementById('seating_event_total_tables');
  const seatsInput = document.getElementById('seating_event_table_size');
  const capacityDisplay = document.getElementById('capacity-display');
  const tablesDisplay = document.getElementById('tables-display');
  const seatsDisplay = document.getElementById('seats-display');
  const capacityWarning = document.getElementById('capacity-warning');
  const studentCount = <%= @cohort.students.count %>;

  function updateCapacity() {
    const tables = parseInt(tablesInput.value) || 0;
    const seats = parseInt(seatsInput.value) || 0;
    const capacity = tables * seats;
    
    capacityDisplay.textContent = capacity;
    tablesDisplay.textContent = tables;
    seatsDisplay.textContent = seats;
    
    if (capacity < studentCount && capacity > 0) {
      capacityWarning.classList.remove('hidden');
    } else {
      capacityWarning.classList.add('hidden');
    }
  }

  tablesInput.addEventListener('input', updateCapacity);
  seatsInput.addEventListener('input', updateCapacity);
  updateCapacity();

  // Update days based on event type
  const eventTypeSelect = document.getElementById('seating_event_event_type');
  const daysInput = document.getElementById('days');
  
  function updateDaysForEventType() {
    if (eventTypeSelect.value === 'single_day') {
      daysInput.value = '1';
      daysInput.setAttribute('readonly', 'readonly');
      daysInput.classList.add('bg-gray-100');
    } else {
      daysInput.removeAttribute('readonly');
      daysInput.classList.remove('bg-gray-100');
      if (daysInput.value === '1') {
        daysInput.value = '<%= @default_days %>';
      }
    }
  }
  
  eventTypeSelect.addEventListener('change', updateDaysForEventType);
  updateDaysForEventType();
});
</script>