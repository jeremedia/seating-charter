<% content_for :title, "Seating Charts - #{@cohort.name}" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Seating Charts</h1>
        <p class="text-gray-600 mt-1"><%= @cohort.name %></p>
      </div>
      
      <div class="flex space-x-3">
        <%= link_to 'Create New Chart', new_cohort_seating_event_path(@cohort), 
              class: 'inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md shadow-sm text-sm font-medium hover:bg-blue-700' %>
        <%= link_to 'Back to Cohort', cohort_path(@cohort), 
              class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
      </div>
    </div>
  </div>

  <!-- Seating Events List -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @seating_events.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Chart Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Configuration</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @seating_events.each do |event| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= event.name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= event.event_date.strftime("%B %d, %Y") %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= event.event_type.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= event.total_tables %> tables Ã— <%= event.table_size %> seats
                </div>
                <div class="text-xs text-gray-500">
                  <%= event.max_students_capacity %> total capacity
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if event.has_arrangement? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Seating Generated
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    No Seating Yet
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to 'View', cohort_seating_event_path(@cohort, event), 
                      class: 'text-blue-600 hover:text-blue-900 mr-3' %>
                <%= link_to 'Edit', edit_cohort_seating_event_path(@cohort, event), 
                      class: 'text-gray-600 hover:text-gray-900 mr-3' %>
                <%= link_to 'Delete', cohort_seating_event_path(@cohort, event), 
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: 'text-red-600 hover:text-red-900' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No Seating Charts Yet</h3>
        <p class="mt-1 text-sm text-gray-500">Create your first seating chart to get started.</p>
        <div class="mt-6">
          <%= link_to 'Create Seating Chart', new_cohort_seating_event_path(@cohort), 
                class: 'inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md shadow-sm text-sm font-medium hover:bg-blue-700' %>
        </div>
      </div>
    <% end %>
  </div>
</div>