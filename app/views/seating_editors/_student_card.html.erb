<div class="student-card" 
     data-seating-editor-target="studentCard"
     data-student-id="<%= student[:id] %>"
     data-student-name="<%= student[:name] %>"
     data-action="dblclick->seating-editor#onStudentDoubleClick contextmenu->seating-editor#onStudentRightClick"
     draggable="true">
  
  <!-- Student Avatar/Photo -->
  <div class="student-avatar">
    <% if student[:photo_url].present? %>
      <img src="<%= student[:photo_url] %>" 
           alt="<%= student[:name] %>" 
           class="avatar-image">
    <% else %>
      <div class="avatar-placeholder">
        <span class="avatar-initials">
          <%= student[:name].split(' ').map(&:first).join('').upcase %>
        </span>
      </div>
    <% end %>
    
    <!-- Status indicators -->
    <div class="student-status">
      <% if student[:is_new] %>
        <span class="status-badge new" title="New student">New</span>
      <% end %>
      
      <% if student[:has_special_needs] %>
        <span class="status-badge special" title="Special accommodation needed">‚ö†Ô∏è</span>
      <% end %>
    </div>
  </div>

  <!-- Student Info -->
  <div class="student-info">
    <h6 class="student-name" title="<%= student[:name] %>">
      <%= truncate(student[:name], length: 25) %>
    </h6>
    
    <p class="student-organization" title="<%= student[:organization] %>">
      <%= truncate(student[:organization] || 'Unknown Org', length: 30) %>
    </p>
    
    <p class="student-title" title="<%= student[:title] %>">
      <%= truncate(student[:title] || 'No title', length: 35) %>
    </p>
  </div>

  <!-- Attribute Indicators -->
  <div class="student-attributes">
    <!-- Gender indicator -->
    <% if student[:gender].present? %>
      <span class="attribute-badge gender gender-<%= student[:gender].downcase %>" 
            title="Gender: <%= student[:gender].humanize %>">
        <%= student[:gender].first.upcase %>
      </span>
    <% end %>

    <!-- Agency level indicator -->
    <% if student[:agency_level].present? %>
      <span class="attribute-badge agency agency-<%= student[:agency_level].downcase.gsub(/\s+/, '-') %>" 
            title="Agency: <%= student[:agency_level].humanize %>">
        <%= student[:agency_level].split('_').map(&:first).join('').upcase %>
      </span>
    <% end %>

    <!-- Department type indicator -->
    <% if student[:department_type].present? %>
      <span class="attribute-badge department department-<%= student[:department_type].downcase.gsub(/\s+/, '-') %>" 
            title="Department: <%= student[:department_type].humanize %>">
        <%= student[:department_type].split('_').map(&:first).join('').upcase %>
      </span>
    <% end %>

    <!-- Seniority level indicator -->
    <% if student[:seniority_level].present? %>
      <span class="attribute-badge seniority seniority-<%= student[:seniority_level].downcase.gsub(/\s+/, '-') %>" 
            title="Seniority: <%= student[:seniority_level].humanize %>">
        <% case student[:seniority_level].downcase
           when 'entry_level', 'junior' %>
          Jr
        <% when 'mid_level', 'mid-level' %>
          Mid
        <% when 'senior_level', 'senior' %>
          Sr
        <% when 'executive', 'leadership' %>
          Exec
        <% else %>
          <%= student[:seniority_level].first.upcase %>
        <% end %>
      </span>
    <% end %>
  </div>

  <!-- Interaction History Indicators -->
  <div class="interaction-indicators">
    <% if student[:previous_interactions]&.any? %>
      <div class="interaction-summary">
        <span class="interaction-count" title="Previous interactions: <%= student[:previous_interactions].count %>">
          ü§ù <%= student[:previous_interactions].count %>
        </span>
      </div>
    <% end %>

    <% if student[:conflict_indicators]&.any? %>
      <div class="conflict-indicators">
        <% student[:conflict_indicators].each do |conflict| %>
          <span class="conflict-indicator <%= conflict[:severity] %>" 
                title="<%= conflict[:message] %>">
            <%= conflict[:severity] == 'high' ? 'üî¥' : 'üü°' %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Drag Handle -->
  <div class="drag-handle" title="Drag to move student">
    <span class="drag-icon">‚ãÆ‚ãÆ</span>
  </div>

  <!-- Quick Actions Menu -->
  <div class="quick-actions">
    <div class="dropdown">
      <button type="button" 
              class="btn btn-sm btn-link quick-actions-toggle"
              data-bs-toggle="dropdown"
              onclick="event.stopPropagation()">
        <span class="icon">‚ãØ</span>
      </button>
      
      <ul class="dropdown-menu dropdown-menu-end">
        <li>
          <button class="dropdown-item" 
                  data-action="click->seating-editor#showStudentDetails"
                  data-student-id="<%= student[:id] %>">
            <span class="icon">üë§</span> View Details
          </button>
        </li>
        <li>
          <button class="dropdown-item" 
                  data-action="click->seating-editor#highlightStudent"
                  data-student-id="<%= student[:id] %>">
            <span class="icon">üîç</span> Find Student
          </button>
        </li>
        <li><hr class="dropdown-divider"></li>
        <li>
          <button class="dropdown-item" 
                  onclick="prompt('Swap with student ID:', '')">
            <span class="icon">üîÑ</span> Swap With...
          </button>
        </li>
        <li>
          <button class="dropdown-item" 
                  data-action="click->seating-editor#moveToUnassigned"
                  data-student-id="<%= student[:id] %>">
            <span class="icon">üì§</span> Move to Unassigned
          </button>
        </li>
      </ul>
    </div>
  </div>

  <!-- Selection Checkbox (for bulk operations) -->
  <div class="selection-checkbox">
    <input type="checkbox" 
           class="form-check-input student-selector" 
           data-student-id="<%= student[:id] %>"
           title="Select for bulk operations">
  </div>
</div>

